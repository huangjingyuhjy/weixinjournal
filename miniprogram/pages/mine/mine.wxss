/* pages/mine/mine.wxss */
.container{
  display: flex;
  height: 400rpx;
  width: 700rpx;
  margin-left: 25rpx;
  flex-direction: column;
  border-radius: 20rpx;
  }
  .touxiang {
    width: 200rpx; /* 设置宽度 */
    height: 200rpx; /* 设置高度 */
    border-radius: 50%; /* 圆形 */
    margin-left: 225rpx; /* 左边距 */
    margin-right: 225rpx; /* 左边距 */
    object-fit: cover; /* 图片填充方式 */
    max-width: 100%; /* 最大宽度为100% */
    max-height: 100%; /* 最大高度为100% */
  }
  
  .huanyin{
    text-align: center;
    font-size: 12px;
  }
  /* 弹窗区 */
  .pop_root{
    position:fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color:rgb(0,0,0,0.6);
    z-index: 1000;
  }
  .pop_content{
    width: 100%;
    background-color:white;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 30rpx,30rpx,0,0;
  }
  .pot_tip{
    font-size: 48rpx;
    margin-top: 30rpx;
  }
  .ipbutton{
    width: 200rpx;
    height: 100rpx;
    font-size: 35rpx;
    border: solid 1px #000000;
    background-color: rgb(211, 221, 211);
  }
  input{
    margin-top: 20rpx;
    border: solid 1px #000000;
    height: 20rpx;
  }
  .pop_bot{
    display: flex;
    margin-bottom: 50rpx;
    margin-top: 50rpx;
  }
  .btn{
    width: 150rpx;
    border: 1px solid gray;
    text-align: center;
    border-radius: 20rpx;
    color: gray;
  }
  .btn_log{
    margin-left: 90rpx;
    width: 150rpx;
    border: 1px solid gray;
    text-align: center;
    border-radius: 20rpx;
    color: green;
  }
  .mine{
      height: 500rpx;
      width: 700rpx;
      margin-top: 30rpx;
      margin-left: 25rpx;
      border-radius: 20rpx;
  }
  .kanjian{
    height: 400rpx;
      width: 700rpx;
      margin-top: 30rpx;
      margin-left: 25rpx;
      border-radius: 20rpx;
  }
  .liedui{
    /* 我的页面专属按钮 */
    margin-top: 15rpx;
    height: 60rpx;
    width: 650rpx;
    font-size: 20rpx;
    border: 1px solid pink;
    border-radius: 20rpx;
  }
  .count-text.completed {
    color: #C7DEE7; /* 已完成数量显示为绿色 */
  }
  
  .count-text.failed {
    color: #F6EAF0; /* 已失败数量显示为红色 */
  }